---
import { Image } from "astro:assets";
import heroImage from "../assets/hero.webp";
import Label from "./Label.astro";
import resume from "../assets/Michael Poulgrain Resume.pdf";
---

<section class="py-5 sm:py-10 lg:py-16">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 items-center gap-12 lg:grid-cols-2">
            <div>
                <!-- <p class='text-offset text-lg'>Software Engineer</p> -->

                <h1 class="mt-3 text-2xl font-bold sm:text-4xl lg:text-5xl">
                    Hello, I'm Michael!
                </h1>

                <p class="mt-5 text-base sm:text-xl">
                    I studied Electrical Engineering but now I'm a <span
                        class="font-bold">Software Engineer</span
                    >. I'm most experienced with React & Nodejs. I'm passionate
                    about building tools across web, mobile and desktop. Always
                    seeking new experiences and challenges.
                </p>
                <div class="flex gap-2 pt-2">
                    <Label title="Brisbane, AU">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 24 24"
                            class="h-5 w-5"
                            slot="icon"
                            ><path
                                fill="currentColor"
                                d="M12.003 11.73q.668 0 1.14-.475q.472-.475.472-1.143t-.475-1.14q-.476-.472-1.143-.472t-1.14.476q-.472.475-.472 1.143t.475 1.14q.476.472 1.143.472M12 19.677q2.82-2.454 4.458-4.991q1.638-2.538 1.638-4.39q0-2.744-1.737-4.53T12 3.981q-2.621 0-4.359 1.785t-1.737 4.53q0 1.852 1.638 4.39q1.639 2.537 4.458 4.99m0 1.343q-3.525-3.117-5.31-5.814q-1.786-2.697-1.786-4.909q0-3.173 2.066-5.234Q9.037 3 12 3t5.03 2.062q2.066 2.061 2.066 5.234q0 2.212-1.785 4.909q-1.786 2.697-5.311 5.814m0-10.904"
                            ></path></svg
                        >
                    </Label>
                </div>
                <div class="mt-10 sm:flex sm:items-center sm:space-x-8">
                    <a
                        href={resume}
                        title="Download CV"
                        download
                        class="inline-flex items-center justify-center rounded bg-blue-500 px-10 py-4 text-base font-semibold text-white transition-all duration-200 hover:bg-blue-400"
                    >
                        Download CV
                    </a>
                </div>
            </div>
            <div class="relative flex justify-center">
                <Image
                    class="w-full md:max-w-md lg:max-w-md"
                    src={heroImage}
                    alt="Astro Resume Theme - Paul Smith"
                />
            </div>
        </div>
    </div>
</section>
